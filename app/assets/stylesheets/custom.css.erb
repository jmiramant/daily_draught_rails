#searchhead {
  width: 395px;
  position: absolute;
  right: -263px;
  top: 5px;
  height: 57px;
  display: none;
}

#headloc {
  border: none;
  width: 82%;
  height: 39px;
  font-size: 19px;
  color: #787878;
  border-radius: 3px;
  padding: 0px 20px;
  box-shadow: 0px 0px 7px #a6a6a6 inset;
}

#searchheadbutton {
  border: 2px solid #858585;
  border-radius: 3px;
  width: 77px;
  color: #858585;
  height: 33px;
  position: relative;
  left: 71.4%;
  top: -36px;
  font-family: "Veto", sans-serif;
  font-weight: 600;
  font-size: 13px;
  background-color: #F3EFE8;
}


.search {
  position: fixed;
  width: 36%;
  height: 112px;
  border-radius: 5px;
  top: 250px;
  left: 31.8%%;
  background-color: #F32A64;
  z-index: 1;
  box-shadow: 0px 0px 4px #a6a6a6;
}


.top_nav {
  box-shadow: 0px 2px 2px #afafaf;
  background-color: #66CAC9;
  width: 100%;
  height: 96px;
  position: fixed;
  z-index: 6;
 }

header .login {
  font-family: 'Lato', sans-serif;
  font-weight: 300;
  position: absolute;
  top: 23px;
  left: 50px;
  border: 2px solid;
  text-align: center;
  width: 124px;
  height: 36px;
  color: #F3EFE8;
  font-size: 23px;
  padding-top: 4px;
  border-radius: 4px;
}

.login:hover {
  color: #F32A64;
  cursor: pointer;
  background-color: #F3EFE8;
  -webkit-transition: all 0.5s;
}


#fbook, #google {
  display: none;
}

.screen {
  position: absolute;
  top: 96px;
  z-index: 1;
  width: 100%;
  background-color: #F3EFE8;
  height: 103%;
  opacity: .8;
}

.login:active {
  box-shadow: 0px 0px 13px #F3EFE8;
  background-color: #A3A3A3;
}

#map_canvas {
  height: 500px;
  width: 500px;
}

#map-canvas img {
  max-width: none;
}

.search form {
  font-family: "Veto", sans-serif;
  font-weight: 600;
  font-size: 27px;
  text-align: center;
  margin: 0px 0px 0px 7px;

}

#location {
  border: none;
  width: 80%;
  height: 47px;
  font-size: 25px;
  color: #787878;
  border-radius: 3px;
  padding: 0px 20px;
}

.search input:focus {
  outline: none;
}

#searchbar {
  border: 2px solid #858585;
  border-radius: 3px;
  width: 90px;
  color: #858585;
  height: 39px;
  position: relative;
  left: 33.4%;
  top: -44px;
  font-family: "Veto", sans-serif;
  font-weight: 600;
  font-size: 16px;
  background-color: #F3EFE8;
}

#searchbar:hover, #searchheadbutton:hover {
  background-color: #FDA033;
  color: #fff;
  border-color: #acacac;
  -webkit-transition: all 0.2s;
}

#searchbar:active, #searchheadbutton:active {
  background-color: #666666;
  color: #fff;
}

.filter-box {
  height: 15px;
  width: 15px;
  display: inline-block;
  *border-right-width: 2px;
  *border-bottom-width: 2px;
  -webkit-border-radius: 5px;
     -moz-border-radius: 5px;
          border-radius: 5px;
  -webkit-background-clip: padding-box;
     -moz-background-clip: padding;
          background-clip: padding-box; 
}

.filter-yellow { background-color: #FBF358; }
.filter-green { background-color: #00E13C; }
.filter-blue { background-color: #5781FC; }
.filter-purple { background-color: #7C54FB; }
.filter-red { background-color: #FB6353; }

canvas {-ms-touch-action: double-tap-zoom;}

