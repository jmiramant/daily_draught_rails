a { color: #4B58A6; }

html {
  height: 100%;
}

body {
  height: 100%;
  margin: 0;
  padding: 0;
  background-color: #F3EFE8;
}

.login_screen {
  background-image: url('<%= image_path("bw_beer_can.png") %>');
  height: 100%;
  background-repeat: no-repeat;
  background-size: 28%;
  z-index: -1;
  position: absolute;
  width: 72%;
  top: 135px;
  left: 39.5%;
}

.search {
  position: absolute;
  width: 39%;
  height: 186px;
  border-radius: 3px;
  top: 300px;
  left: 30.5%;
  background-color: #F32A64;
  z-index: 3;
  opacity: 0.7;
  box-shadow: 0px 0px 4px #F3EFEF inset;
}


.top_nav {
  background-color: #66CAC9;
  width: 100%;
  height: 96px;
  position: fixed;
  z-index: 2;
 }

header .login {
  font-family: 'Lato', sans-serif;
  font-weight: 300;
  position: absolute;
  top: 23px;
  left: 50px;
  border: 2px solid;
  text-align: center;
  width: 124px;
  height: 36px;
  color: #F3EFE8;
  font-size: 23px;
  padding-top: 4px;
  border-radius: 4px;
}

.login:hover {
  color: #F32A64;
  cursor: pointer;
  background-color: #F3EFE8;
  -webkit-transition: all 0.5s;
}


#fbook, #google {
  display: none;
  border-radius: 0px 4px 4px 0px;
}

.screen {
  position: absolute;
  top: 96px;
  z-index: 1;
  width: 100%;
  background-color: #F3EFE8;
  height: 100%;
  opacity: .8;
}

.login:active {
  box-shadow: 0px 0px 13px #F3EFE8;
  background-color: #A3A3A3;
}

#map_canvas {
  height: 500px;
  width: 500px;
}

#map-canvas img {
  max-width: none;
}

.search form {
  font-family: "Veto", sans-serif;
  font-weight: 600;
  font-size: 27px;
  text-align: center;
  margin-top: 31px;

}

#location {
  border: none;
  width: 300px;
  height: 50px;
  font-size: 25px;
  color: #787878;
}

.search input:focus {
  outline: none;
}


.filter-box {
  height: 15px;
  width: 15px;
  display: inline-block;
  *border-right-width: 2px;
  *border-bottom-width: 2px;
  -webkit-border-radius: 5px;
     -moz-border-radius: 5px;
          border-radius: 5px;
  -webkit-background-clip: padding-box;
     -moz-background-clip: padding;
          background-clip: padding-box; 
}

.filter-yellow { background-color: #FBF358; }
.filter-green { background-color: #00E13C; }
.filter-blue { background-color: #5781FC; }
.filter-purple { background-color: #7C54FB; }
.filter-red { background-color: #FB6353; }

canvas {-ms-touch-action: double-tap-zoom;}
